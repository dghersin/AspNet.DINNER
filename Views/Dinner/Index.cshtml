<h1>Večernji meni</h1>

<table class="table">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Opis</th>
            <th>Cijena</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dinnerItem in Model)
        {
            <tr>
                <td>@dinnerItem.Name</td>
                <td>@dinnerItem.Description</td>
                <td>@dinnerItem.Price$</td>
            </tr>
        }
    </tbody>
</table>

@{
}
